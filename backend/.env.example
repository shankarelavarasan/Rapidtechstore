# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rapidtechstore"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# Razorpay Configuration (India)
RAZORPAY_KEY_ID="rzp_test_your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
RAZORPAY_WEBHOOK_SECRET="your_razorpay_webhook_secret"

# Payoneer Configuration (Global Payouts)
PAYONEER_PROGRAM_ID="your_payoneer_program_id"
PAYONEER_USERNAME="your_payoneer_username"
PAYONEER_API_PASSWORD="your_payoneer_api_password"
PAYONEER_PARTNER_ID="your_payoneer_partner_id"
PAYONEER_WEBHOOK_SECRET="your_payoneer_webhook_secret"
PAYONEER_SANDBOX="true"

# Wise Configuration (International Transfers)
WISE_API_TOKEN="your_wise_api_token"
WISE_PROFILE_ID="your_wise_profile_id"
WISE_WEBHOOK_SECRET="your_wise_webhook_secret"
WISE_SANDBOX="true"

# Currency Conversion API Keys
# Fixer.io (Primary)
FIXER_API_KEY="your_fixer_api_key"

# ExchangeRate-API (Fallback)
EXCHANGERATE_API_KEY="your_exchangerate_api_key"

# Open Exchange Rates (Fallback)
OPENEXCHANGE_APP_ID="your_openexchange_app_id"

# Currency Service Configuration
CURRENCY_CACHE_TTL="3600"  # Cache TTL in seconds (1 hour)
CURRENCY_DEFAULT_PROVIDER="fixer"
CURRENCY_FALLBACK_ENABLED="true"

# Payment Gateway Regional Configuration
# Stripe regions (comma-separated)
STRIPE_SUPPORTED_REGIONS="US,CA,GB,EU,AU,SG,JP"

# Razorpay regions (comma-separated)
RAZORPAY_SUPPORTED_REGIONS="IN"

# Payoneer regions (comma-separated)
PAYONEER_SUPPORTED_REGIONS="US,CA,GB,EU,AU,SG,JP,IN,BR,MX"

# Wise regions (comma-separated)
WISE_SUPPORTED_REGIONS="US,CA,GB,EU,AU,SG,JP,IN,BR,MX,ZA,NG"

# Payment Processing Configuration
PAYMENT_DEFAULT_REGION="US"
PAYMENT_FALLBACK_ENABLED="true"
PAYMENT_RETRY_ATTEMPTS="3"
PAYMENT_TIMEOUT="30000"  # Timeout in milliseconds

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS="3"
WEBHOOK_TIMEOUT="10000"  # Timeout in milliseconds
WEBHOOK_SIGNATURE_TOLERANCE="300"  # Signature tolerance in seconds

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_ENABLED="true"
LOG_FILE_PATH="./logs/app.log"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW="15"  # Window in minutes
RATE_LIMIT_MAX_REQUESTS="100"  # Max requests per window

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_SECRET="your-session-secret-change-this-in-production"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@rapidtechstore.com"

# Monitoring and Analytics
ANALYTICS_ENABLED="true"
METRICS_ENABLED="true"

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB in bytes
UPLOAD_PATH="./uploads"

# Development Configuration
DEBUG_MODE="true"
MOCK_PAYMENTS="false"  # Set to true for testing without real payment processing

# Production Configuration (uncomment for production)
# NODE_ENV="production"
# DEBUG_MODE="false"
# STRIPE_SECRET_KEY="sk_live_your_live_stripe_secret_key"
# RAZORPAY_KEY_ID="rzp_live_your_live_razorpay_key_id"
# PAYONEER_SANDBOX="false"
# WISE_SANDBOX="false"