# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rapidtech_store
REDIS_URL=redis://localhost:6379

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account.json

# Google Play Billing
GOOGLE_PLAY_DEVELOPER_API_KEY=your-google-play-api-key
GOOGLE_PLAY_PACKAGE_NAME=com.rapidtech.store
GOOGLE_PLAY_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
PAYONEER_API_KEY=your-payoneer-api-key
PAYONEER_API_SECRET=your-payoneer-api-secret

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@rapidtech.store
SUPPORT_EMAIL=support@rapidtech.store

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# API Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
CONSOLE_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# DNS Verification
DNS_CHECK_INTERVAL=3600000
DNS_TIMEOUT=10000

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key
HUGGING_FACE_API_KEY=your-hugging-face-api-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Domain Configuration
MAIN_DOMAIN=rapidtech.store
CONSOLE_DOMAIN=console.rapidtech.store
API_DOMAIN=api.rapidtech.store